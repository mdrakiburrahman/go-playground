{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Go Application",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/hello-go"
        },
        {
            "name": "Launch OTEL Core Collector",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/opentelemetry-collector/cmd/otelcorecol",
            "args": ["--config", "${workspaceRoot}/opentelemetry-collector/examples/local/otel-config.yaml"]
        },
        {
            "name": "Launch OTEL Custom Collector",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/opentelemetry-collector-raki",
            "args": ["--config", "${workspaceRoot}/custom-collector-runtime-config.yaml"]
        },
        {
            "name": "Launch Demo Client Application",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/opentelemetry-collector-contrib/examples/demo/client"
        },
        {
            "name": "Launch Demo Server Application",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/opentelemetry-collector-contrib/examples/demo/server"
        }
    ]
}